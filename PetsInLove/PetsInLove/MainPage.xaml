<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetsInLove.MainPage"
             xmlns:pages="clr-namespace:PetsInLove;assembly=PetsInLove"
             Title="teste">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About" Command="{Binding AboutCommand}"/>
        <ToolbarItem Text="Buscar" Command="{Binding SearchCommand}"/>
    </ContentPage.ToolbarItems>


    <StackLayout
                  Orientation="Vertical"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 BackgroundColor="White"
                 x:Name="layoutMain"
                 >
        <Button Text="Filtros" 
                Clicked="ExecuteOpenFilterCommand"
                        ></Button>
            <Entry Placeholder="Raça"
                       IsVisible="False"
                       x:Name="txtBreed"
                       ></Entry>
            <Picker x:Name="pickerSpecies" 
                    Grid.Row="0" 
                    HorizontalOptions="FillAndExpand" 
                    IsVisible="False"
                    BindingContext="{Binding pickerSpecies}"
                    >
            </Picker>
        <Picker x:Name="pickerGenre" 
                    Grid.Row="0" 
                    HorizontalOptions="FillAndExpand"
                IsVisible="False"
                BindingContext="{Binding pickerGenre}"
                    >
        </Picker>

        <!--Lista -->
            <ListView 
            HasUnevenRows="True"
            ItemsSource="{Binding Pets}" 
            ItemSelected="ListView_OnItemSelected"
            RefreshCommand="{Binding RefreshCommand}"
            IsPullToRefreshEnabled="True" Margin="0,30,0,0"
            >   
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <Grid RowSpacing="5" ColumnSpacing="0" Margin="10,5" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="AUTO"/>
                            </Grid.RowDefinitions>
                            <Image Source="{Binding Photo}" Aspect="AspectFill" Grid.RowSpan="2" />
                            <Image Source="ShadowOverlay" Grid.RowSpan="2"  Aspect="Fill" VerticalOptions="End" HorizontalOptions="Fill" />

                            <Grid Margin="10" RowSpacing="10" ColumnSpacing="10" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="AUTO"/>
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}" FontSize="20" TextColor="#000000" FontAttributes="Bold" BackgroundColor="#ffffff" Opacity="0.7"  Grid.Row="0" Grid.ColumnSpan="3"  LineBreakMode="NoWrap"/>
                                <StackLayout  Grid.Row="1" Grid.Column="0" BackgroundColor="#ffffff" Opacity="0.7" Grid.ColumnSpan="3" >
                                    <Label Text="{Binding Breed}" TextColor="#000000"   />
                                </StackLayout>

                            </Grid>

                        </Grid>
                    </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
</ContentPage>